{
  "name": "screen-recorder",
  "version": "1.0.0",
  "description": "A simple screen recorder application built with Electron.",
  "author": "Your Name <your.email@example.com>",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "cors": "^2.8.5",
    "electron-screencapture": "^1.1.0",
    "electron-store": "^8.1.0",
    "express": "^5.1.0",
    "ffmpeg-static": "^5.2.0",
    "stripe": "^18.2.1"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.example.screen-recorder",
    "productName": "Screen Recorder",
    "files": [
      "**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/ffmpeg-static/ffmpeg.exe",
        "to": "ffmpeg.exe"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/app.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "include": "build/installer.nsh"
    }
  }
}
